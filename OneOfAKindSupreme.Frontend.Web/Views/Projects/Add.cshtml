<div class="card shadow-lg border-0 rounded-lg mt-5">
    <div class="card-header"><h3 class="text-center font-weight-light my-4">Add Project</h3></div>
    <div class="card-body">
        <form>
            <div class="form-floating mb-3">
                <input class="form-control" id="inputProjectName" type="email" placeholder="" />
                <label for="inputProjectName">Project Name</label>
            </div>
            <div class="form-floating mb-3">
                <select class="form-control" name="projectStatus" id="projectStatus">
                    <option value="pending">Pending</option>
                    <option value="inProgress">In Progress</option>
                    <option value="done">Done</option>
                </select>
                <label for="inputProjectStatus">Status</label>
            </div>
            <div class="d-flex align-items-center justify-content-between mt-4 mb-0">
                <a class="btn btn-primary" href="index.html">Save</a>
            </div>
        </form>
    </div>
    <div class="card-footer text-center py-3">
        <div class="small"></div>
    </div>
</div>
